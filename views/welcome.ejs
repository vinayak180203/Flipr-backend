<div class="dropdown">
  <button
    class="btn btn-secondary dropdown-toggle"
    type="button"
    data-bs-toggle="dropdown"
    aria-expanded="false"
  >
    --Select Stocks --
  </button>
  <ul class="dropdown-menu">
    <li><a class="dropdown-item" href="/welcome/tatasteel">TATASTEEL</a></li>
    <li><a class="dropdown-item" href="/welcome/reliance">RELIANCE</a></li>
    <li><a class="dropdown-item" href="/welcome/cipla">CIPLA</a></li>
    <li><a class="dropdown-item" href="/welcome/eichermot">EICHERMOT</a></li>
